#include<iostream>
using namespace std;
class Queue
{
private:
    int front;
    int rear;
    int arr[5];
public:
    Queue()
    {
        front = -1;
        rear = -1;
        for (int i = 0; i < 5; i++)
        {
            arr[i] = 0;
        }
    }
    bool isEmpty()
    {
        if (front == -1 && rear == -1)
        {
            return true;


        }
        else
        {
            return false;
        }
    }
    bool isFull()
    {
        if (rear == 4)
            return true;
        else
            return false;
    }
    void enque(int val)
    {
        if (isFull())
        {
            cout<<"Queue is full" << endl;
        }
        else if (isEmpty())
        {
            rear = 0;
            front = 0;
            arr[rear] = val;
        }
        else
        {
            rear++;
            arr[rear] = val;
        }
    }
    int dequeue()
    {
        int x;
        if (isEmpty())
        {
            cout << "Queue is Empty" << endl;
            return 0;
        }
        else if (front == rear)
        {
            x = arr[front];
            arr[front] = 0;
            rear = -1;
            front = -1;
            return x;
        }
        else
        {
            x = arr[front];
            arr[front] = 0;
            front++;
            return x;

        }
    }
    int count()
    {
        return (rear - front + 1);
    }
    void display()
    {
        cout << "All values in the queue are " << endl;
        for (int i = 0; i < 5; i++)
        {
            cout << arr[i] << " ";
        }
    }
};



int main()
{
    Queue q;
    int option, value;
    do
    {
        cout << "1.Enqueue" << endl;
        cout << "2.Dequeue" << endl;
        cout << "3.isEmpty" << endl;
        cout << "4.isFull" << endl;
        cout << "5.Count" << endl;
        cout << "6.Display" << endl;
        cin >> option;
        switch (option)
        {
        
        case 0:
            break;
        case 1:
            cout << "Enter Item to queue" << endl;
            cin >> value;
            q.enque(value);
            break;
        case 2:
            cout << "Dequeue operation :" << q.dequeue() << endl;
            break;
        case 3:
            if (q.isEmpty())
            {
                cout << "Queue is Empty";
            }
            else
            {
                cout << "Queue is not Empty";
            }
            break;
        case 4:
            if (q.isFull())
            {
                cout << "Queue is Full";
            }
            else
            {
                cout << "Queue is not Full";
            }
            break;
        case 5:
            cout << "Count Opernation in Queue:" << q.count() << endl;
            break;
        case 6:
            cout << "Display all Number" << endl;
            q.display();
            break;
        }
    } while (option != 0);
    

}
